<p id="notice"><%= notice %></p>

<h1>Listing Castes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @castes.each do |caste| %>
      <tr>
        <td><%= caste.name %></td>
        <td><%= link_to 'Show', [@character_type, caste] %></td>
        <td><%= link_to 'Edit', edit_character_type_caste_path(@character_type, caste) %></td>
        <td><%= link_to 'Destroy', [@character_type, caste], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

