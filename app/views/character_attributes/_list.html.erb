<h1>Listing Attributes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @character_attributes.each do |character_attribute| %>
      <tr>
        <td><%= character_attribute.name %></td>
        <td><%= link_to 'Show', [@attribute_category, character_attribute] %></td>
        <td><%= link_to 'Edit', edit_attribute_category_character_attribute_path(@attribute_category, character_attribute) %></td>
        <td><%= link_to 'Destroy', [@attribute_category, character_attribute], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
